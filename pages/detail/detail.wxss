/* pages/detail/detail.wxss */

.main {
    padding: 10rpx;
}

.video_info {
    margin-top: 10rpx;
    color: #666;
}

.video_info video {
    width: 100%;
}

.video_title {
    color: #000;
    font-size: 35rpx;
}

.video_detail {
    display: flex;
    margin-top: -25rpx;
    font-size: 28rpx;
}

.video_detail text {
    margin-left: 5rpx;
}

.video_detail .author {
    color: #000;
}

.video_other {
    padding: 10rpx 20rpx;
}

.other_wrap {
    display: flex;
    width: 100%;
    justify-content: space-between;
    margin-top: 10rpx;
}

.other_wrap image {
    width: 40%;
    border-radius: 15rpx;
}

.other_wrap .title_wrap {
    font-size: 30rpx;
    color: #666;
    width: 57%;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
}

.other_wrap .other_title {
    overflow: hidden;
    word-break: break-word;
    white-space: normal;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.other_wrap .other_detail {
    display: flex;
    font-size: 24rpx;
    color: #ccc;
    /* justify-content: space-around; */
}

.other_wrap .other_detail text {
    margin-left: 10rpx;
}


/* 评论模块 */

.comment_title {
    font-size: 30rpx;
}

.comment_wrap {
    padding: 10rpx;
}

.comment_item {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    border-bottom: 1px solid #666;
}

.comment_item navigator {
    width: 10%;
    /* border-radius: 50%; */
}

.comment_item image {
    width: 100%;
    border-radius: 50%;
}

.comment_item .userInfo_wrap {
    width: 85%;
}

.userInfo_wrap .user_wrap {
    display: flex;
    justify-content: space-between;
    font-size: 25rpx;
    color: #ccc;
}

.userInfo_wrap .userInfo {
    font-size: 30rpx;
    margin: 20rpx 0;
}